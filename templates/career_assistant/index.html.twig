{% extends 'base.html.twig' %}

{% block title %}Career Assistant - {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container py-4">
        {# <!-- Breadcrumb Navigation -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                        <i class="bi bi-house me-1"></i>Dashboard
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <i class="bi bi-robot me-1"></i>Career Assistant
                </li>
            </ol>
        </nav> #}

        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col">
                <div class="d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                         style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="bi bi-robot"></i>
                    </div>
                    <div>
                        <h1 class="h3 mb-1">Career Assistant</h1>
                        <p class="text-muted mb-0">
                            AI-powered career guidance and development tools
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats Row -->
        <div class="row mb-4">
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card widget-card h-100">
                    <div class="card-body text-center">
                        <div class="text-primary mb-2">
                            <i class="bi bi-award-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="mb-1">{{ stats.totalCredentials }}</h4>
                        <small class="text-muted">Earned Credentials</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card widget-card h-100">
                    <div class="card-body text-center">
                        <div class="text-success mb-2">
                            <i class="bi bi-star-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="mb-1">{{ stats.totalSkills }}</h4>
                        <small class="text-muted">Skills Developed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card widget-card h-100">
                    <div class="card-body text-center">
                        <div class="text-warning mb-2">
                            <i class="bi bi-briefcase-fill" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="mb-1">{{ stats.careerInterests }}</h4>
                        <small class="text-muted">Career Interests</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card widget-card h-100">
                    <div class="card-body text-center">
                        <div class="text-info mb-2">
                            <i class="bi bi-activity" style="font-size: 2rem;"></i>
                        </div>
                        <h4 class="mb-1">{{ stats.recentActivity }}</h4>
                        <small class="text-muted">Recent Activity</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="row">
            <!-- Assistant Modules -->
            <div class="col-lg-8 mb-4">
                <div class="card widget-card">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-grid-3x3-gap me-2"></i>Career Assistant Modules
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Interview Simulator -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 bg-light h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="text-primary mb-3">
                                            <i class="bi bi-camera-video-fill" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Interview Simulator</h5>
                                        <p class="card-text text-muted small">
                                            Practice mock interviews with real-time feedback and adaptive questions
                                        </p>
                                        <button class="btn btn-outline-primary btn-sm" disabled>
                                            <i class="bi bi-play-circle me-1"></i>Coming Soon
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Career Discovery -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 bg-light h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="text-success mb-3">
                                            <i class="bi bi-compass-fill" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Career Discovery</h5>
                                        <p class="card-text text-muted small">
                                            Interest assessments, skills gap analysis, and career path mapping
                                        </p>
                                        <button class="btn btn-outline-success btn-sm" disabled>
                                            <i class="bi bi-search me-1"></i>Coming Soon
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Professional Development Coach -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 bg-light h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="text-warning mb-3">
                                            <i class="bi bi-person-workspace" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">Development Coach</h5>
                                        <p class="card-text text-muted small">
                                            Resume review, LinkedIn optimization, and goal setting guidance
                                        </p>
                                        <button class="btn btn-outline-warning btn-sm" disabled>
                                            <i class="bi bi-trophy me-1"></i>Coming Soon
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- AI Chat Assistant -->
                            <div class="col-md-6 mb-3">
                                <div class="card border-0 bg-light h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="text-info mb-3">
                                            <i class="bi bi-chat-dots-fill" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="card-title">AI Chat Assistant</h5>
                                        <p class="card-text text-muted small">
                                            Personalized career guidance through conversational AI
                                        </p>
                                        <button class="btn btn-outline-info btn-sm" disabled>
                                            <i class="bi bi-robot me-1"></i>Coming Soon
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar: Student Profile Snapshot -->
            <div class="col-lg-4 mb-4">
                <div class="card widget-card">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-circle me-2"></i>Your Profile
                        </h5>
                    </div>
                    <div class="card-body text-center">
                        {% if user.avatarUrl %}
                            <img src="{{ user.avatarUrl }}" alt="{{ user.fullName }}"
                                 class="rounded-circle mb-2" style="width: 80px; height: 80px; object-fit: cover;">
                        {% else %}
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-2"
                                 style="width: 80px; height: 80px; font-size: 2rem;">
                                {{ user.firstName|slice(0,1) }}{{ user.lastName|slice(0,1) }}
                            </div>
                        {% endif %}
                        <h6 class="mb-1">{{ user.fullName }}</h6>
                        {% if user.studentId %}
                            <small class="text-muted">ID: {{ user.studentId }}</small>
                        {% endif %}

                        <hr>
                        <div class="mb-2">
                            <span class="badge bg-primary me-1">{{ stats.totalSkills }} Skills</span>
                            <span class="badge bg-success me-1">{{ stats.totalCredentials }} Credentials</span>
                        </div>
                        {% if careerInterests|length > 0 %}
                            <h6 class="text-muted mb-2 mt-3">Career Interests</h6>
                            <div class="d-flex flex-wrap justify-content-center gap-1">
                                {% for interest in careerInterests|slice(0, 3) %}
                                    <span class="badge bg-light text-dark border">{{ interest.title }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <a href="{{ path('app_profile') }}" class="btn btn-outline-secondary btn-sm mt-3">
                            <i class="bi bi-person-gear me-1"></i>Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Chat Interface -->
        <div class="row mb-4">
            <div class="col-lg-8">
                <div class="card widget-card">
                    <div class="card-header bg-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-chat-dots me-2"></i>Career Assistant Chat
                            </h5>
                            <div class="d-flex align-items-center gap-3">
                                <!-- Mode Selector -->
                                <div class="dropdown">
                                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="modeSelector" data-bs-toggle="dropdown">
                                        <i class="bi bi-gear me-1"></i><span id="currentMode">General</span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#" data-mode="general">
                                            <i class="bi bi-chat-dots me-2"></i>General Guidance
                                        </a></li>
                                        <li><a class="dropdown-item" href="#" data-mode="interview">
                                            <i class="bi bi-camera-video me-2"></i>Interview Simulator
                                        </a></li>
                                        <li><a class="dropdown-item" href="#" data-mode="discovery">
                                            <i class="bi bi-compass me-2"></i>Career Discovery
                                        </a></li>
                                        <li><a class="dropdown-item" href="#" data-mode="coach">
                                            <i class="bi bi-person-workspace me-2"></i>Development Coach
                                        </a></li>
                                    </ul>
                                </div>
                                <!-- Personalization Toggle -->
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="personalizationToggle" checked>
                                    <label class="form-check-label" for="personalizationToggle" title="Toggle personalized advice">Personalized</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" style="height: 350px; overflow-y: auto; background: #f9fafb;" id="chatMessages">
                        <!-- Welcome message -->
                        <div class="chat-message assistant-message mb-3">
                            <div class="d-flex align-items-start">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" 
                                     style="width: 32px; height: 32px; font-size: 0.8rem; min-width: 32px;">
                                    <i class="bi bi-robot"></i>
                                </div>
                                <div class="chat-bubble bg-light rounded p-3" style="max-width: 80%;">
                                    <p class="mb-0">Hello! I'm your Career Assistant. I can help you with career guidance, interview practice, career discovery, and professional development. What would you like to work on today?</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <form id="chatForm" class="d-flex align-items-center gap-2">
                            <input type="text" id="messageInput" class="form-control" placeholder="Type your question..." autocomplete="off" required>
                            <button type="submit" id="sendButton" class="btn btn-primary">
                                <i class="bi bi-send"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Sidebar -->
            <div class="col-lg-4">
                <div class="card widget-card">
                    <div class="card-header bg-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lightning me-2"></i>Quick Actions
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary btn-sm" onclick="askQuestion('What are my career options based on my skills?')">
                                <i class="bi bi-search me-1"></i>Career Options
                            </button>
                            <button class="btn btn-outline-success btn-sm" onclick="askQuestion('How can I improve my resume?')">
                                <i class="bi bi-file-earmark-text me-1"></i>Resume Help
                            </button>
                            <button class="btn btn-outline-warning btn-sm" onclick="askQuestion('What interview questions should I prepare for?')">
                                <i class="bi bi-question-circle me-1"></i>Interview Prep
                            </button>
                            <button class="btn btn-outline-info btn-sm" onclick="askQuestion('What skills should I develop next?')">
                                <i class="bi bi-star me-1"></i>Skill Development
                            </button>
                            <button class="btn btn-outline-secondary btn-sm" onclick="askQuestion('How can I network effectively?')">
                                <i class="bi bi-people me-1"></i>Networking Tips
                            </button>
                            <button class="btn btn-outline-dark btn-sm" onclick="askQuestion('What are the current job market trends?')">
                                <i class="bi bi-graph-up me-1"></i>Market Trends
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const chatForm = document.getElementById('chatForm');
            const messageInput = document.getElementById('messageInput');
            const chatMessages = document.getElementById('chatMessages');
            const sendButton = document.getElementById('sendButton');
            const personalizationToggle = document.getElementById('personalizationToggle');
            const modeSelector = document.getElementById('modeSelector');
            const currentModeSpan = document.getElementById('currentMode');
            
            let currentMode = 'general';

            // Mode switching
            document.querySelectorAll('[data-mode]').forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const mode = this.getAttribute('data-mode');
                    currentMode = mode;
                    currentModeSpan.textContent = this.textContent.trim();
                    
                    // Add mode change message
                    appendMessage('assistant', `Switched to ${this.textContent.trim()} mode. How can I help you?`);
                });
            });

            chatForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const message = messageInput.value.trim();
                if (!message) return;

                // Add user message to chat
                appendMessage('user', message);

                // Disable input while waiting
                messageInput.value = '';
                messageInput.disabled = true;
                sendButton.disabled = true;

                // Show loading indicator
                appendMessage('assistant', '<span class="spinner-border spinner-border-sm text-primary" role="status"></span>');

                fetch('{{ path('app_career_assistant_chat') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        message: message,
                        personalized: personalizationToggle.checked,
                        mode: currentMode
                    })
                })
                .then(response => response.json())
                .then(data => {
                    // Remove loading indicator
                    removeLastAssistantMessage();
                    if (data.success) {
                        appendMessage('assistant', data.response);
                    } else {
                        appendMessage('assistant', '<span class="text-danger">Sorry, something went wrong.</span>');
                    }
                })
                .catch((error) => {
                    console.error('Chat error:', error);
                    removeLastAssistantMessage();
                    appendMessage('assistant', '<span class="text-danger">Sorry, something went wrong.</span>');
                })
                .finally(() => {
                    messageInput.disabled = false;
                    sendButton.disabled = false;
                    messageInput.focus();
                });
            });

            function appendMessage(sender, text) {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('chat-message', sender === 'user' ? 'user-message' : 'assistant-message', 'mb-3');
                messageDiv.innerHTML = sender === 'user'
                    ? `<div class="d-flex align-items-start justify-content-end">
                            <div class="chat-bubble bg-primary text-white rounded p-3 ms-auto" style="max-width: 80%;">
                                <p class="mb-0">${escapeHtml(text)}</p>
                            </div>
                        </div>`
                    : `<div class="d-flex align-items-start">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" 
                                 style="width: 32px; height: 32px; font-size: 0.8rem; min-width: 32px;">
                                <i class="bi bi-robot"></i>
                            </div>
                            <div class="chat-bubble bg-light rounded p-3" style="max-width: 80%;">
                                <p class="mb-0">${text}</p>
                            </div>
                        </div>`;
                chatMessages.appendChild(messageDiv);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function removeLastAssistantMessage() {
                const messages = chatMessages.querySelectorAll('.assistant-message');
                if (messages.length > 0) {
                    messages[messages.length - 1].remove();
                }
            }

            function escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }

            // Quick Actions
            window.askQuestion = function (question) {
                messageInput.value = question;
                chatForm.dispatchEvent(new Event('submit'));
            }
        });
    </script>
{% endblock %}