{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Register - Pathway+{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-2">Join Pathway+</h2>
                        <p class="text-muted">Create your account to start tracking your learning journey</p>
                    </div>

                    {{ form_start(registrationForm) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.firstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.lastName) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.studentId) }}
                    </div>

{#                    <div class="mb-3">#}
{#                        {{ form_row(registrationForm.roles) }}#}
{#                    </div>#}

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.first) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.second) }}
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mb-3">Create Account</button>
                    {{ form_end(registrationForm) }}

                    <div class="text-center">
                        <p class="mb-0">Already have an account?
                            <a href="{{ path('app_login') }}" class="text-decoration-none">Sign in here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
