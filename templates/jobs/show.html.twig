{% extends 'base.html.twig' %}

{% block title %}{{ job.title }} - Pathway+{% endblock %}

{% block body %}
<div class="container">
    <!-- Back Navigation -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                            <i class="bi bi-house me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_jobs_browse') }}" class="text-decoration-none">
                            <i class="bi bi-briefcase me-1"></i>Browse Jobs
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ job.title }}</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Job Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card widget-card">
                <div class="card-body py-3">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="h2 text-primary mb-2">{{ job.title }}</h1>
                            <div class="d-flex flex-wrap gap-2 mb-2">
                                {% if job.industry %}
                                    <span class="badge bg-secondary">{{ job.industry }}</span>
                                {% endif %}
                                {% if job.salaryRange %}
                                    <span class="badge bg-success">{{ job.salaryRange }}</span>
                                {% endif %}
                                {% if job.jobCode %}
                                    <span class="badge bg-info">Code: {{ job.jobCode }}</span>
                                {% endif %}
                            </div>
                            <p class="text-muted mb-0 small">
                                <i class="bi bi-calendar me-1"></i>Last updated: {{ job.updatedAt|date('M d, Y') }}
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-primary btn-sm" onclick="addToInterests({{ job.id }})">
                                    <i class="bi bi-heart me-1"></i>Add to Interests
                                </button>
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="shareJob()">
                                    <i class="bi bi-share me-1"></i>Share Job
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Job Description -->
            {% if job.description %}
                <div class="card widget-card mb-3">
                    <div class="card-body py-3">
                        <h3 class="h5 text-primary mb-2">
                            <i class="bi bi-file-text me-2"></i>Job Description
                        </h3>
                        <div class="job-content">
                            {{ job.description|striptags|raw|nl2br }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Entry Requirements -->
            {% if job.entryRequirements %}
                <div class="card widget-card mb-3">
                    <div class="card-body py-3">
                        <h3 class="h5 text-primary mb-2">
                            <i class="bi bi-list-check me-2"></i>Entry Requirements
                        </h3>
                        <div class="job-content">
                            {{ job.entryRequirements|striptags|raw|nl2br }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Job Opportunities -->
            {% if job.jobOpportunities %}
                <div class="card widget-card mb-3">
                    <div class="card-body py-3">
                        <h3 class="h5 text-primary mb-2">
                            <i class="bi bi-graph-up me-2"></i>Job Opportunities
                        </h3>
                        {% if job.jobOpportunitiesCaption %}
                            <p class="text-muted mb-2 small"><em>{{ job.jobOpportunitiesCaption|striptags|raw }}</em></p>
                        {% endif %}
                        <div class="job-content">
                            {{ job.jobOpportunities|striptags|raw|nl2br }}
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Required Skills -->
            {% if job.skills|length > 0 %}
                <div class="card widget-card mb-3">
                    <div class="card-body py-3">
                        <h4 class="h6 text-primary mb-2">
                            <i class="bi bi-tags me-2"></i>Required Skills
                        </h4>
                        <div class="d-flex flex-wrap gap-1">
                            {% for skill in job.skills %}
                                <span class="badge bg-primary">{{ skill.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Job Details -->
            <div class="card widget-card mb-3">
                <div class="card-body py-3">
                    <h4 class="h6 text-primary mb-2">
                        <i class="bi bi-info-circle me-2"></i>Job Details
                    </h4>
                    <div class="row g-2">
                        {% if job.yearsOfTraining %}
                            <div class="col-12">
                                <div class="d-flex align-items-center p-2 bg-light rounded">
                                    <i class="bi bi-clock text-primary me-2"></i>
                                    <div>
                                        <strong class="small">Training Duration</strong><br>
                                        <span class="text-muted small">{{ job.yearsOfTraining }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if job.anzsco %}
                            <div class="col-12">
                                <div class="d-flex align-items-center p-2 bg-light rounded">
                                    <i class="bi bi-hash text-primary me-2"></i>
                                    <div>
                                        <strong class="small">ANZSCO Code</strong><br>
                                        <span class="text-muted small">{{ job.anzsco }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        {% if job.source %}
                            <div class="col-12">
                                <div class="d-flex align-items-center p-2 bg-light rounded">
                                    <i class="bi bi-link-45deg text-primary me-2"></i>
                                    <div>
                                        <strong class="small">Source</strong><br>
                                        <span class="text-muted small">{{ job.source }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="col-12">
                            <div class="d-flex align-items-center p-2 bg-light rounded">
                                <i class="bi bi-calendar-event text-primary me-2"></i>
                                <div>
                                    <strong class="small">Created</strong><br>
                                    <span class="text-muted small">{{ job.createdAt|date('M d, Y') }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card widget-card">
                <div class="card-body py-3">
                    <h4 class="h6 text-primary mb-2">
                        <i class="bi bi-lightning me-2"></i>Quick Actions
                    </h4>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_jobs_browse') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i>Back to Browse
                        </a>
                        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-speedometer2 me-1"></i>Go to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.job-content {
    line-height: 1.6;
    color: var(--dark-charcoal);
    font-size: 0.95rem;
}

.job-content p {
    margin-bottom: 1rem;
}

.job-content ul, .job-content ol {
    padding-left: 1.5rem;
    margin-bottom: 1rem;
}

.job-content li {
    margin-bottom: 0.5rem;
}

.bg-light {
    background-color: var(--cool-white) !important;
    border: 1px solid rgba(108, 117, 125, 0.1);
}

.card.widget-card {
    border-radius: 8px;
    border: none;
    box-shadow: 0 2px 8px rgba(30, 42, 56, 0.08);
    transition: all 0.3s ease;
}

.card.widget-card:hover {
    box-shadow: 0 4px 16px rgba(30, 42, 56, 0.12);
    transform: translateY(-1px);
}

.h2 {
    font-size: 1.75rem;
    font-weight: 600;
}

.h5 {
    font-size: 1.1rem;
    font-weight: 600;
}

.h6 {
    font-size: 1rem;
    font-weight: 600;
}

@media (max-width: 768px) {
    .h2 {
        font-size: 1.5rem;
    }
    
    .job-content {
        font-size: 0.9rem;
    }
}
</style>

<script>
function addToInterests(jobId) {
    // Show loading state
    const button = event.target;
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Adding...';
    button.disabled = true;

    // Make API call to add to interests
    fetch(`/jobs/${jobId}/add-to-interests`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            button.innerHTML = '<i class="bi bi-heart-fill me-1"></i>Added to Interests';
            button.classList.remove('btn-primary');
            button.classList.add('btn-success');
            
            // Show success message
            Swal.fire({
                title: 'Added to Interests!',
                text: data.message,
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        } else {
            // Handle error
            button.innerHTML = originalText;
            button.disabled = false;
            
            Swal.fire({
                title: 'Error',
                text: data.message || 'Failed to add job to interests',
                icon: 'error'
            });
        }
    })
    .catch(error => {
        // Handle network error
        button.innerHTML = originalText;
        button.disabled = false;
        
        Swal.fire({
            title: 'Error',
            text: 'Network error. Please try again.',
            icon: 'error'
        });
    });
}

function shareJob() {
    const jobTitle = '{{ job.title }}';
    const jobUrl = window.location.href;
    
    if (navigator.share) {
        navigator.share({
            title: jobTitle,
            url: jobUrl
        });
    } else {
        // Fallback for browsers that don't support Web Share API
        navigator.clipboard.writeText(jobUrl).then(() => {
            Swal.fire({
                title: 'Link Copied!',
                text: 'Job link has been copied to your clipboard.',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        });
    }
}
</script>
{% endblock %} 