{% extends 'base.html.twig' %}

{% block title %}{{ job.title }} - Pathway+{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Card for job detail page */
        .job-header-card {
            border: 2px solid rgba(0, 123, 255, 0.2);
            box-shadow: 0 4px 16px rgba(0, 123, 255, 0.1);
            background: linear-gradient(145deg, #ffffff 0%, #f0f8ff 100%);
        }
        
        [data-theme="dark"] .job-header-card {
            background: var(--bg-tertiary) !important;
            border-color: var(--border-color) !important;
        }
        
        .job-header-card:hover {
            box-shadow: 0 6px 20px rgba(0, 123, 255, 0.15);
            border-color: rgba(0, 123, 255, 0.3);
        }
        
        .job-content-card {
            border: 2px solid rgba(108, 117, 125, 0.2);
            box-shadow: 0 6px 20px rgba(30, 42, 56, 0.15);
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
        }
        
        [data-theme="dark"] .job-content-card {
            background: var(--bg-secondary) !important;
            border-color: var(--border-color) !important;
        }
        
        .job-content-card:hover {
            box-shadow: 0 8px 24px rgba(30, 42, 56, 0.18);
            border-color: rgba(0, 123, 255, 0.3);
        }
        
        /* Detail items */
        .detail-item {
            border: 1px solid rgba(108, 117, 125, 0.15);
            box-shadow: 0 2px 8px rgba(30, 42, 56, 0.08);
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
        }
        
        [data-theme="dark"] .detail-item {
            background: var(--bg-tertiary) !important;
            border-color: var(--border-color) !important;
        }
        
        .detail-item:hover {
            box-shadow: 0 4px 12px rgba(30, 42, 56, 0.12);
            border-color: rgba(0, 123, 255, 0.2);
        }
        
        /* Badge */
        .badge {
            border: 1px solid rgba(0, 0, 0, 0.1);
            font-weight: 500;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
        }
        
        [data-theme="dark"] .badge.bg-secondary {
            background-color: #4a4a4a !important;
            color: #e0e0e0 !important;
        }
        
        /* Button */
        .btn-primary {
            box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
        }
        
        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
        }
        
        .btn-outline-primary {
            border: 2px solid var(--electric-blue);
            box-shadow: 0 2px 8px rgba(0, 123, 255, 0.1);
        }
        
        .btn-outline-primary:hover {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.2);
        }
        
        /* Job detail */
        .job-content {
            line-height: 1.6;
            color: var(--dark-charcoal);
            font-size: 0.95rem;
        }

        [data-theme="dark"] .job-content {
            color: var(--dark-charcoal) !important;
        }

        .job-content p {
            margin-bottom: 1rem;
        }

        .job-content ul, .job-content ol {
            padding-left: 1.5rem;
            margin-bottom: 1rem;
        }

        .job-content li {
            margin-bottom: 0.5rem;
        }

        .content-section {
            border-bottom: 1px solid rgba(108, 117, 125, 0.1);
            padding-bottom: 1.5rem;
        }

        .content-section:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .sidebar-section {
            border-bottom: 1px solid rgba(108, 117, 125, 0.1);
            padding-bottom: 1.5rem;
        }

        .sidebar-section:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

        .job-details-list {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .detail-label {
            font-weight: 600;
            color: var(--dark-charcoal);
            margin-right: 0.5rem;
            font-size: 0.9rem;
        }

        .detail-value {
            color: var(--muted-gray);
            font-size: 0.9rem;
        }

        [data-theme="dark"] .detail-value,
        [data-theme="dark"] .text-muted {
            color: var(--muted-gray) !important;
        }

        .h2 {
            font-size: 1.75rem;
            font-weight: 600;
        }

        .h5 {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .h6 {
            font-size: 1rem;
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .h2 {
                font-size: 1.5rem;
            }
            
            .job-content {
                font-size: 0.9rem;
            }
            
            .detail-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.25rem;
            }
            
            .content-section, .sidebar-section {
                border-bottom: 1px solid rgba(108, 117, 125, 0.1);
                padding-bottom: 1.5rem;
                margin-bottom: 1.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <!-- Back Navigation -->
    <div class="row mb-3">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                            <i class="bi bi-house me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_jobs_browse') }}" class="text-decoration-none">
                            <i class="bi bi-briefcase me-1"></i>Browse Jobs
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">{{ job.title }}</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Job Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card widget-card job-header-card">
                <div class="card-body">
                    <div class="row align-items-start">
                        <div class="col-md-8">
                            <h1 class="h2 text-primary mb-2">{{ job.title }}</h1>
                            <div class="d-flex flex-wrap gap-2 mb-2">
                                {% if job.industry %}
                                    <span class="badge bg-secondary">{{ job.industry }}</span>
                                {% endif %}
                                {% if job.salaryRange %}
                                    <span class="badge bg-success">{{ job.salaryRange }}</span>
                                {% endif %}
                                {% if job.jobCode %}
                                    <span class="badge bg-info">Code: {{ job.jobCode }}</span>
                                {% endif %}
                            </div>
                            <p class="text-muted mb-0 small">
                                <i class="bi bi-calendar me-1"></i>Last updated: {{ job.updatedAt|date('M d, Y') }}
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="d-grid gap-2">
                                <button type="button" class="btn btn-primary btn-sm" onclick="addToInterests({{ job.id }})">
                                    <i class="bi bi-heart me-1"></i>Add to Interests
                                </button>
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="shareJob()">
                                    <i class="bi bi-share me-1"></i>Share Job
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="row">
        <div class="col-12">
            <div class="card widget-card job-content-card">
                <div class="card-body">
                    <div class="row">
                        <!-- Main Content -->
                        <div class="col-lg-8">
                            <!-- Job Description -->
                            {% if job.description %}
                                <div class="content-section mb-4">
                                    <h3 class="h5 text-primary mb-3">
                                        <i class="bi bi-file-text me-2"></i>Job Description
                                    </h3>
                                    <div class="job-content">
                                        {{ job.description|striptags|raw|nl2br }}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Entry Requirements -->
                            {% if job.entryRequirements %}
                                <div class="content-section mb-4">
                                    <h3 class="h5 text-primary mb-3">
                                        <i class="bi bi-list-check me-2"></i>Entry Requirements
                                    </h3>
                                    <div class="job-content">
                                        {{ job.entryRequirements|striptags|raw|nl2br }}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Job Opportunities -->
                            {% if job.jobOpportunities %}
                                <div class="content-section">
                                    <h3 class="h5 text-primary mb-3">
                                        <i class="bi bi-graph-up me-2"></i>Job Opportunities
                                    </h3>
                                    {% if job.jobOpportunitiesCaption %}
                                        <p class="text-muted mb-3"><em>{{ job.jobOpportunitiesCaption|striptags|raw }}</em></p>
                                    {% endif %}
                                    <div class="job-content">
                                        {{ job.jobOpportunities|striptags|raw|nl2br }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Sidebar -->
                        <div class="col-lg-4">
                            <!-- Required Skills -->
                            {% if job.skills|length > 0 %}
                                <div class="sidebar-section mb-4">
                                    <h4 class="h6 text-primary mb-3">
                                        <i class="bi bi-tags me-2"></i>Required Skills
                                    </h4>
                                    <div class="d-flex flex-wrap gap-1">
                                        {% for skill in job.skills %}
                                            <span class="badge bg-primary">{{ skill.name }}</span>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}

                            <!-- Job Details -->
                            <div class="sidebar-section">
                                <h4 class="h6 text-primary mb-3">
                                    <i class="bi bi-info-circle me-2"></i>Job Details
                                </h4>
                                <div class="job-details-list">
                                    {% if job.yearsOfTraining %}
                                        <div class="detail-item">
                                            <i class="bi bi-clock text-primary me-2"></i>
                                            <span class="detail-label">Training Duration:</span>
                                            <span class="detail-value">{{ job.yearsOfTraining }} {{ job.yearsOfTraining == '1' ? 'year' : 'years' }}</span>
                                        </div>
                                    {% endif %}

                                    {% if job.anzsco %}
                                        <div class="detail-item">
                                            <i class="bi bi-hash text-primary me-2"></i>
                                            <span class="detail-label">ANZSCO Code:</span>
                                            <span class="detail-value">{{ job.anzsco }}</span>
                                        </div>
                                    {% endif %}

                                    {% if job.source %}
                                        <div class="detail-item">
                                            <i class="bi bi-link-45deg text-primary me-2"></i>
                                            <span class="detail-label">Source:</span>
                                            <span class="detail-value">{{ job.source }}</span>
                                        </div>
                                    {% endif %}

                                    <div class="detail-item">
                                        <i class="bi bi-calendar-event text-primary me-2"></i>
                                        <span class="detail-label">Created:</span>
                                        <span class="detail-value">{{ job.createdAt|date('M d, Y') }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function addToInterests(jobId) {
    // Show loading state
    const button = event.target;
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="bi bi-hourglass-split me-1"></i>Adding...';
    button.disabled = true;

    // Make API call to add to interests
    fetch(`/jobs/${jobId}/add-to-interests`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            button.innerHTML = '<i class="bi bi-heart-fill me-1"></i>Added to Interests';
            button.classList.remove('btn-primary');
            button.classList.add('btn-success');
            
            // Show success message
            Swal.fire({
                title: 'Added to Interests!',
                text: data.message,
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        } else {
            // Handle error
            button.innerHTML = originalText;
            button.disabled = false;
            
            Swal.fire({
                title: 'Error',
                text: data.message || 'Failed to add job to interests',
                icon: 'error'
            });
        }
    })
    .catch(error => {
        // Handle network error
        button.innerHTML = originalText;
        button.disabled = false;
        
        Swal.fire({
            title: 'Error',
            text: 'Network error. Please try again.',
            icon: 'error'
        });
    });
}

function shareJob() {
    const jobTitle = '{{ job.title }}';
    const jobUrl = window.location.href;
    
    if (navigator.share) {
        navigator.share({
            title: jobTitle,
            url: jobUrl
        });
    } else {
        // Fallback for browsers that don't support Web Share API
        navigator.clipboard.writeText(jobUrl).then(() => {
            Swal.fire({
                title: 'Link Copied!',
                text: 'Job link has been copied to your clipboard.',
                icon: 'success',
                timer: 2000,
                showConfirmButton: false
            });
        });
    }
}
</script>
{% endblock %} 