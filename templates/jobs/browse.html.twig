{% extends 'base.html.twig' %}

{% block title %}Browse Jobs - Pathway+{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sidebar-widget {
            height: auto !important;
            max-height: 320px;
            overflow-y: auto;
        }
        .sidebar-container {
            position: sticky;
            top: 20px;
        }

        /* Enhanced card styling for browse jobs page */
        .job-card {
            border: 2px solid rgba(108, 117, 125, 0.2);
            box-shadow: 0 6px 20px rgba(30, 42, 56, 0.15);
            transition: all 0.3s ease;
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
        }

        .job-card:hover {
            box-shadow: 0 10px 30px rgba(30, 42, 56, 0.25);
            transform: translateY(-4px);
            border-color: rgba(0, 123, 255, 0.4);
        }

        .search-card {
            border: 2px solid rgba(0, 123, 255, 0.2);
            box-shadow: 0 4px 16px rgba(0, 123, 255, 0.1);
            background: linear-gradient(145deg, #ffffff 0%, #f0f8ff 100%);
        }

        .sidebar-card {
            border: 2px solid rgba(108, 117, 125, 0.18);
            box-shadow: 0 4px 16px rgba(30, 42, 56, 0.12);
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
        }

        .sidebar-card:hover {
            box-shadow: 0 6px 20px rgba(30, 42, 56, 0.18);
            border-color: rgba(0, 123, 255, 0.3);
        }

        /* Card header enhancements */
        .card-header {
            border-bottom: 2px solid rgba(0, 123, 255, 0.1);
            background: linear-gradient(135deg, var(--bs-primary) 0%, #0056b3 100%);
        }

        /* Badge enhancements */
        .badge {
            border: 1px solid rgba(0, 0, 0, 0.1);
            font-weight: 500;
        }

        /* Enhanced button styling */
        .btn-primary {
            box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="dashboard-header">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h1 class="mb-2">
                                <i class="bi bi-briefcase me-2"></i>Browse Jobs
                            </h1>
                            <p class="mb-0 opacity-75">Explore career opportunities and find your perfect role</p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="d-flex justify-content-md-end">
                                <span class="badge bg-primary fs-6">
                                    <i class="bi bi-collection me-1"></i>{{ jobs.nbResults }} Jobs Available
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card widget-card search-card">
                <div class="card-body py-3">
                    <form method="GET" action="{{ path('app_jobs_browse') }}" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text"
                                       class="form-control"
                                       name="search"
                                       value="{{ search }}"
                                       placeholder="Search jobs by title, industry, or skills..."
                                       aria-label="Search jobs">
                                <button class="btn btn-primary" type="submit">
                                    <i class="bi bi-search me-1"></i>Search
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select name="industry" class="form-select">
                                <option value="">All Industries</option>
                                <option value="Information Technology" {{ app.request.get('industry') == 'Information Technology' ? 'selected' : '' }}>Information Technology</option>
                                <option value="Finance" {{ app.request.get('industry') == 'Finance' ? 'selected' : '' }}>Finance</option>
                                <option value="Healthcare" {{ app.request.get('industry') == 'Healthcare' ? 'selected' : '' }}>Healthcare</option>
                                <option value="Education" {{ app.request.get('industry') == 'Education' ? 'selected' : '' }}>Education</option>
                                <option value="Design" {{ app.request.get('industry') == 'Design' ? 'selected' : '' }}>Design</option>
                                <option value="Advertising and Marketing" {{ app.request.get('industry') == 'Advertising and Marketing' ? 'selected' : '' }}>Advertising and Marketing</option>
                                <option value="Engineering" {{ app.request.get('industry') == 'Engineering' ? 'selected' : '' }}>Engineering</option>
                                <option value="Sales" {{ app.request.get('industry') == 'Sales' ? 'selected' : '' }}>Sales</option>
                                <option value="Administration" {{ app.request.get('industry') == 'Administration' ? 'selected' : '' }}>Administration</option>
                                <option value="Architecture, Technical Design and Mapping" {{ app.request.get('industry') == 'Architecture, Technical Design and Mapping' ? 'selected' : '' }}>Architecture & Design</option>
                                <option value="Community Services" {{ app.request.get('industry') == 'Community Services' ? 'selected' : '' }}>Community Services</option>
                                <option value="Data & Analytics" {{ app.request.get('industry') == 'Data & Analytics' ? 'selected' : '' }}>Data & Analytics</option>
                                <option value="Product Management" {{ app.request.get('industry') == 'Product Management' ? 'selected' : '' }}>Product Management</option>
                                <option value="Creative Design" {{ app.request.get('industry') == 'Creative Design' ? 'selected' : '' }}>Creative Design</option>
                                <option value="Entertainment" {{ app.request.get('industry') == 'Entertainment' ? 'selected' : '' }}>Entertainment</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex gap-2">
                                {% if search or app.request.get('industry') %}
                                    <a href="{{ path('app_jobs_browse') }}" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-1"></i>Clear
                                    </a>
                                {% endif %}
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-funnel me-1"></i>Filter
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Results Info -->
    {% if search %}
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info d-flex align-items-center py-2" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <div class="small">
                        <strong>Search Results:</strong> Found {{ jobs.nbResults }} job{{ jobs.nbResults != 1 ? 's' : '' }} matching "{{ search }}"
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Main Content with Sidebar -->
    <div class="row">
        <!-- Main Jobs List -->
        <div class="col-lg-9">
            {% if jobs.nbResults > 0 %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
                    {% for job in jobs %}
                        <div class="col">
                            <div class="card widget-card job-card h-100">
                                <div class="card-body py-3 d-flex flex-column">
                                    <!-- Job Header -->
                                    <div class="mb-2">
                                        <h5 class="card-title text-primary mb-2 h6">
                                            <i class="bi bi-briefcase me-1"></i>{{ job.title }}
                                        </h5>
                                        <div class="d-flex flex-wrap gap-1 mb-2">
                                            {% if job.industry %}
                                                <span class="badge bg-secondary small">{{ job.industry }}</span>
                                            {% endif %}
                                            {% if job.salaryRange %}
                                                <span class="badge bg-success small">{{ job.salaryRange }}</span>
                                            {% endif %}
                                        </div>
                                    </div>

                                    <!-- Job Description -->
                                    <div class="mb-2 flex-grow-1">
                                        {% if job.description %}
                                            <p class="card-text text-muted small">
                                                {{ (job.description|striptags|raw)|length > 120 ? (job.description|striptags|raw)|slice(0, 120) ~ '...' : (job.description|striptags|raw) }}
                                            </p>
                                        {% else %}
                                            <p class="card-text text-muted small">
                                                <em>No description available</em>
                                            </p>
                                        {% endif %}
                                    </div>

                                    <!-- Required Skills -->
                                    {% if job.skills|length > 0 %}
                                        <div class="mb-2">
                                            <h6 class="text-muted mb-1 small">
                                                <i class="bi bi-tags me-1"></i>Required Skills:
                                            </h6>
                                            <div class="d-flex flex-wrap gap-1">
                                                {% for skill in job.skills|slice(0, 3) %}
                                                    <span class="badge bg-light text-dark border small">{{ skill.name }}</span>
                                                {% endfor %}
                                                {% if job.skills|length > 3 %}
                                                    <span class="badge bg-light text-dark border small">+{{ job.skills|length - 3 }} more</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}

                                    <!-- Job Details -->
                                    <div class="mt-auto">
                                        <div class="row text-muted small mb-2">
                                            {% if job.jobCode %}
                                                <div class="col-6">
                                                    <i class="bi bi-hash me-1"></i>Code: {{ job.jobCode }}
                                                </div>
                                            {% endif %}
                                            {% if job.yearsOfTraining %}
                                                <div class="col-6">
                                                    <i class="bi bi-clock me-1"></i>{{ job.yearsOfTraining }} {{ job.yearsOfTraining == '1' ? 'year' : 'years' }}
                                                </div>
                                            {% endif %}
                                        </div>

                                        <a href="{{ path('app_jobs_show', {id: job.id}) }}"
                                           class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% if jobs.haveToPaginate %}
                    <div class="row mt-4">
                        <div class="col-12">
                            <nav aria-label="Jobs pagination">
                                <ul class="pagination justify-content-center">
                                    {% if jobs.hasPreviousPage %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_jobs_browse', {page: jobs.previousPage, search: search, industry: industry}) }}">
                                                <i class="bi bi-chevron-left"></i> Previous
                                            </a>
                                        </li>
                                    {% endif %}

                                    {% set startPage = max(1, jobs.currentPage - 2) %}
                                    {% set endPage = min(jobs.nbPages, jobs.currentPage + 2) %}

                                    {% if startPage > 1 %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_jobs_browse', {page: 1, search: search, industry: industry}) }}">1</a>
                                        </li>
                                        {% if startPage > 2 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                    {% endif %}

                                    {% for page in startPage..endPage %}
                                        <li class="page-item {{ page == jobs.currentPage ? 'active' : '' }}">
                                            <a class="page-link" href="{{ path('app_jobs_browse', {page: page, search: search, industry: industry}) }}">
                                                {{ page }}
                                            </a>
                                        </li>
                                    {% endfor %}

                                    {% if endPage < jobs.nbPages %}
                                        {% if endPage < jobs.nbPages - 1 %}
                                            <li class="page-item disabled">
                                                <span class="page-link">...</span>
                                            </li>
                                        {% endif %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_jobs_browse', {page: jobs.nbPages, search: search, industry: industry}) }}">{{ jobs.nbPages }}</a>
                                        </li>
                                    {% endif %}

                                    {% if jobs.hasNextPage %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('app_jobs_browse', {page: jobs.nextPage, search: search, industry: industry}) }}">
                                                Next <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </nav>
                        </div>
                    </div>
                {% endif %}

            {% else %}
                <!-- No Results -->
                <div class="row">
                    <div class="col-12">
                        <div class="card widget-card search-card">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-search display-1 text-muted mb-3"></i>
                                <h3 class="text-muted mb-3">
                                    {% if search %}
                                        No jobs found matching "{{ search }}"
                                    {% else %}
                                        No jobs available at the moment
                                    {% endif %}
                                </h3>
                                <p class="text-muted mb-4">
                                    {% if search %}
                                        Try adjusting your search terms or browse all available jobs.
                                    {% else %}
                                        Check back later for new opportunities.
                                    {% endif %}
                                </p>
                                {% if search %}
                                    <a href="{{ path('app_jobs_browse') }}" class="btn btn-primary">
                                        <i class="bi bi-arrow-left me-1"></i>Browse All Jobs
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="sidebar-container">
                <!-- Statistics Widget -->
                <div class="card widget-card sidebar-card sidebar-widget mb-2">
                    <div class="card-header bg-primary text-white py-1">
                        <h6 class="mb-0 small">
                            <i class="bi bi-graph-up me-1"></i>Job Statistics
                        </h6>
                    </div>
                    <div class="card-body py-2">
                        <div class="row text-center mb-2">
                            <div class="col-6">
                                <div class="h6 text-primary mb-0">{{ jobStats.totalJobs }}</div>
                                <div class="small text-muted">Jobs</div>
                            </div>
                            <div class="col-6">
                                <div class="h6 text-success mb-0">{{ jobStats.avgSkillsPerJob }}</div>
                                <div class="small text-muted">Avg Skills</div>
                            </div>
                        </div>

                        {% if jobStats.topIndustries|length > 0 %}
                            <hr class="my-2">
                            <h6 class="text-muted mb-1 small">Top Industries</h6>
                            {% for industry in jobStats.topIndustries|slice(0, 3) %}
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="small">{{ industry.industry|length > 15 ? industry.industry|slice(0, 15) ~ '...' : industry.industry }}</span>
                                    <span class="badge bg-light text-dark small">{{ industry.count }}</span>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <!-- Recently Added Jobs -->
                <div class="card widget-card sidebar-card sidebar-widget mb-2">
                    <div class="card-header bg-info text-white py-1">
                        <h6 class="mb-0 small">
                            <i class="bi bi-clock-history me-1"></i>Recently Added
                        </h6>
                    </div>
                    <div class="card-body py-2">
                        {% if recentlyAddedJobs|length > 0 %}
                            {% for job in recentlyAddedJobs|slice(0, 5) %}
                                <div class="mb-1 {% if not loop.last %}border-bottom pb-1{% endif %}">
                                    <h6 class="mb-1 small">
                                        <a href="{{ path('app_jobs_show', {id: job.id}) }}" class="text-decoration-none">
                                            {{ job.title|length > 22 ? job.title|slice(0, 22) ~ '...' : job.title }}
                                        </a>
                                    </h6>
                                    {% if job.industry %}
                                        <span class="badge bg-secondary small">{{ job.industry|length > 12 ? job.industry|slice(0, 12) ~ '...' : job.industry }}</span>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted small mb-0">No recent jobs</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Trending Jobs -->
                <div class="card widget-card sidebar-card sidebar-widget">
                    <div class="card-header bg-warning text-white py-1">
                        <h6 class="mb-0 small">
                            <i class="bi bi-fire me-1"></i>Trending Jobs
                        </h6>
                    </div>
                    <div class="card-body py-2">
                        {% if trendingJobs|length > 0 %}
                            {% for result in trendingJobs|slice(0, 5) %}
                                {% set job = result[0] %}
                                {% set skillCount = result.skillCount %}
                                <div class="mb-1 {% if not loop.last %}border-bottom pb-1{% endif %}">
                                    <h6 class="mb-1 small">
                                        <a href="{{ path('app_jobs_show', {id: job.id}) }}" class="text-decoration-none">
                                            {{ job.title|length > 22 ? job.title|slice(0, 22) ~ '...' : job.title }}
                                        </a>
                                    </h6>
                                    <div class="d-flex align-items-center">
                                        {% if job.industry %}
                                            <span class="badge bg-secondary small me-1">{{ job.industry|length > 10 ? job.industry|slice(0, 10) ~ '...' : job.industry }}</span>
                                        {% endif %}
                                        <span class="badge bg-warning text-dark small">
                                            <i class="bi bi-tags me-1"></i>{{ skillCount }}
                                        </span>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted small mb-0">No trending jobs</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
