    <script>
        // Immediately sets theme from localStorage or system preference to prevent FOUC
        (function() {
            try {
                var theme = localStorage.getItem('theme');
                if (theme) {
                    document.documentElement.setAttribute('data-theme', theme);
                } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
                    document.documentElement.setAttribute('data-theme', 'dark');
                }
            } catch (e) {}
        })();
    </script>

    <style>
        :root {
            --midnight-navy: #1E2A38;
            --electric-blue: #007BFF;
            --slate-gray: #6C757D;
            --cool-white: #F9FAFB;
            --sky-blue: #5BC0EB;
            --soft-green: #28A745;
            --warm-yellow: #FFC107;
            --dark-charcoal: #212529;
            --muted-gray: #ADB5BD;
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-tertiary: #e9ecef;
            --bg-card: #ffffff;
            --bg-navbar: var(--midnight-navy);
            --bg-footer: var(--cool-white);
            --border-color: rgba(108, 117, 125, 0.2);
            --border-light: rgba(108, 117, 125, 0.15);
            --shadow-color: rgba(30, 42, 56, 0.08);
            --shadow-hover: rgba(30, 42, 56, 0.12);
            --shadow-card: rgba(30, 42, 56, 0.12);
        }

        [data-theme="dark"] {
            --cool-white: #1a1a1a;
            --dark-charcoal: #ffffff;
            --muted-gray: #cccccc;
            --bg-primary: #121212;
            --bg-secondary: #1e1e1e;
            --bg-tertiary: #2d2d2d;
            --bg-card: #1e1e1e;
            --bg-footer: #1a1a1a;
            --border-color: rgba(255, 255, 255, 0.1);
            --border-light: rgba(255, 255, 255, 0.05);
            --shadow-color: rgba(0, 0, 0, 0.3);
            --shadow-hover: rgba(0, 0, 0, 0.4);
            --shadow-card: rgba(0, 0, 0, 0.4);
        }

        /* --- Global Dark Theme Overrides --- */
        [data-theme="dark"] hr {
            border-top-color: var(--border-color);
        }
        [data-theme="dark"] .bg-light {
            background-color: var(--bg-tertiary) !important;
        }
        [data-theme="dark"] .text-dark {
            color: var(--dark-charcoal) !important;
        }
        [data-theme="dark"] .text-primary { color: var(--sky-blue) !important; }
        [data-theme="darl"] .text-success { color: #6ee391 !important; }
        [data-theme="dark"] .text-warning { color: #ffd166 !important; }
        
        [data-theme="dark"] .card,
        [data-theme="dark"] .modal-content,
        [data-theme="dark"] .dropdown-menu {
            background-color: var(--bg-card) !important;
            color: var(--dark-charcoal) !important;
        }
        [data-theme="dark"] .card-header {
            background-color: var(--bg-secondary) !important;
            border-bottom: 1px solid var(--border-color) !important;
        }
        
        [data-theme="dark"] .badge.bg-light {
             background-color: #3a3a3a !important;
             color: #e0e0e0 !important;
             border-color: #555 !important;
        }
        [data-theme="dark"] .badge.bg-warning {
            background-color: #856404 !important;
            color: #ffecb3 !important;
        }
        [data-theme="dark"] .badge.bg-info {
            background-color: #0c5460 !important;
            color: #b8daff !important;
        }

        /* --- Page & Component Specific Overrides --- */
        [data-theme="dark"] .dashboard-header h1, 
        [data-theme="dark"] .dashboard-header p {
            color: white !important;
        }
        [data-theme="dark"] .widget-title,
        [data-theme="dark"] .card-title {
            color: var(--dark-charcoal) !important;
        }
        [data-theme="dark"] .career-path-card,
        [data-theme="dark"] .profile-section .card {
            background-color: var(--bg-tertiary) !important;
            border: 1px solid var(--border-color);
        }
        [data-theme="dark"] .progress-bar {
            background-color: var(--sky-blue);
        }
        [data-theme="dark"] .job-card,
        [data-theme="dark"] .search-card,
        [data-theme="dark"] .sidebar-card,
        [data-theme="dark"] .job-statistics .card,
        [data-theme="dark"] .trending-jobs .card {
            background: var(--bg-tertiary) !important;
            border-color: var(--border-color) !important;
        }
        [data-theme="dark"] .job-card:hover {
            border-color: var(--electric-blue) !important;
            box-shadow: 0 6px 20px var(--shadow-hover) !important;
        }
        [data-theme="dark"] .filter-card {
            background: linear-gradient(135deg, #2a2a2a, #1c1c1c) !important;
            border-color: var(--border-color) !important;
        }
        [data-theme="dark"] .stats-card,
        [data-theme="dark"] .bg-success,
        [data-theme="dark"] .bg-warning,
        [data-theme="dark"] .bg-info {
            color: white !important;
        }
        [data-theme="dark"] .stats-card { background: linear-gradient(135deg, #007BFF, #5BC0EB) !important; }
        [data-theme="dark"] .bg-success { background: linear-gradient(135deg, #28A745, #20c997) !important; }
        [data-theme="dark"] .bg-warning { background: linear-gradient(135deg, #FFC107, #ffda6a) !important; }
        [data-theme="dark"] .bg-info { background: linear-gradient(135deg, #17a2b8, #66d9e8) !important; }
        

        /* --- Base App Styling --- */
        * {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
        }

        /* Custom Pathway+ Styling */
        body {
            background-color: var(--bg-primary);
            color: var(--dark-charcoal);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-pathway {
            background-color: var(--bg-navbar) !important;
            border-bottom: 3px solid var(--electric-blue);
            box-shadow: 0 2px 10px var(--shadow-color);
        }

        .navbar-pathway .navbar-brand {
            color: white !important;
            font-weight: 700;
            font-size: 1.5rem;
        }

        .navbar-pathway .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            border-radius: 6px;
        }

        .navbar-pathway .nav-link:hover {
            color: white !important;
            background-color: var(--sky-blue);
            transform: translateY(-1px);
        }

        .navbar-pathway .nav-link.active {
            background-color: var(--electric-blue);
            color: white !important;
        }

        /* Theme Toggle Switch */
        .theme-toggle {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 24px;
            margin: 0 10px;
        }

        .theme-toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .theme-slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(255, 255, 255, 0.3);
            transition: 0.3s;
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .theme-slider:before {
            position: absolute;
            content: "‚òÄÔ∏è";
            height: 18px;
            width: 18px;
            left: 2px;
            bottom: 2px;
            background-color: white;
            transition: 0.3s;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            line-height: 18px;
            text-align: center;
        }

        input:checked + .theme-slider {
            background-color: var(--electric-blue);
        }

        input:checked + .theme-slider:before {
            transform: translateX(26px);
            content: "üåô";
        }

        .theme-toggle-label {
            color: rgba(255, 255, 255, 0.9);
            font-size: 0.8rem;
            margin-right: 5px;
            white-space: nowrap;
        }

        .btn-primary {
            background-color: var(--electric-blue);
            border-color: var(--electric-blue);
        }

        .btn-primary:hover {
            background-color: var(--sky-blue);
            border-color: var(--sky-blue);
        }

        .btn-success {
            background-color: var(--soft-green);
            border-color: var(--soft-green);
        }

        .btn-warning {
            background-color: var(--warm-yellow);
            border-color: var(--warm-yellow);
            color: var(--dark-charcoal);
        }

        .card {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            box-shadow: 0 2px 8px var(--shadow-color);
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 4px 16px var(--shadow-hover);
            transform: translateY(-2px);
        }

        .text-muted {
            color: var(--muted-gray) !important;
        }

        .border-primary {
            border-color: var(--electric-blue) !important;
        }

        .bg-light {
            background-color: var(--bg-secondary) !important;
        }

        /* Dashboard specific styles */
        .dashboard-header {
            background: linear-gradient(135deg, var(--midnight-navy) 0%, var(--electric-blue) 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }

        .widget-card {
            border-radius: 12px;
            border: 2px solid var(--border-light);
            background: var(--bg-card);
            box-shadow: 0 4px 16px var(--shadow-card);
            transition: all 0.3s ease;
            height: 100%;
        }

        .widget-card:hover {
            box-shadow: 0 8px 24px var(--shadow-hover);
            transform: translateY(-3px);
            border-color: rgba(0, 123, 255, 0.3);
        }

        .widget-header {
            background-color: var(--bg-secondary);
            border-bottom: 2px solid var(--electric-blue);
            padding: 1rem 1.5rem;
            border-radius: 12px 12px 0 0;
        }

        .widget-title {
            color: var(--dark-charcoal);
            font-weight: 600;
            margin: 0;
            font-size: 1.1rem;
        }

        .widget-body {
            padding: 1.5rem;
        }

        /* Dropdown menu styling */
        .dropdown-menu {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 12px var(--shadow-color);
            border-radius: 8px;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
            color: var(--dark-charcoal);
        }

        .dropdown-item:hover {
            background-color: var(--bg-secondary);
            color: var(--electric-blue);
        }

        /* Loading spinner */
        .loading-spinner {
            width: 3rem;
            height: 3rem;
            border: 3px solid var(--bg-secondary);
            border-top: 3px solid var(--electric-blue);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Footer styling */
        .footer {
            background-color: var(--bg-footer) !important;
            border-top: 1px solid var(--border-color);
        }

        /* Form elements */
        .form-control, .form-select {
            background-color: var(--bg-card);
            border-color: var(--border-color);
            color: var(--dark-charcoal);
        }

        .form-control:focus, .form-select:focus {
            background-color: var(--bg-card);
            border-color: var(--electric-blue);
            color: var(--dark-charcoal);
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        /* Table styling */
        .table {
            color: var(--dark-charcoal);
        }

        .table th {
            background-color: var(--bg-secondary);
            border-color: var(--border-color);
        }

        .table td {
            border-color: var(--border-color);
        }

        /* Modal styling */
        .modal-content {
            background-color: var(--bg-card);
            border-color: var(--border-color);
        }

        .modal-header {
            border-bottom-color: var(--border-color);
        }

        .modal-footer {
            border-top-color: var(--border-color);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 1.5rem 0;
                margin-bottom: 1.5rem;
            }

            .widget-card {
                margin-bottom: 1rem;
            }

            .theme-toggle-label {
                display: none;
            }
        }

        /* Flash messages styling */
        .alert {
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px var(--shadow-color);
        }

        .alert-success {
            background-color: var(--soft-green);
            color: white;
        }

        .alert-danger {
            background-color: #dc3545;
            color: white;
        }

        .alert-warning {
            background-color: var(--warm-yellow);
            color: var(--dark-charcoal);
        }

        [data-theme="dark"] .widget-header {
            background-color: var(--bg-secondary);
            border-bottom: 2px solid var(--electric-blue);
            padding: 1rem 1.5rem;
            border-radius: 12px 12px 0 0;
        }

        [data-theme="dark"] .card-header {
            background-color: var(--bg-secondary) !important;
            color: var(--dark-charcoal) !important;
            border-bottom: 1px solid var(--border-color) !important;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
