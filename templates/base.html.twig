{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Pathway+{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸŽ“</text></svg>">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

    <style>
        :root {
            /* Primary Colors */
            --midnight-navy: #1E2A38;
            --electric-blue: #007BFF;

            /* Secondary Colors */
            --slate-gray: #6C757D;
            --cool-white: #F9FAFB;

            /* Interactive/Highlight */
            --sky-blue: #5BC0EB;
            --soft-green: #28A745;
            --warm-yellow: #FFC107;

            /* Text */
            --dark-charcoal: #212529;
            --muted-gray: #ADB5BD;
        }

        /* Custom Pathway+ Styling */
        body {
            background-color: var(--cool-white);
            color: var(--dark-charcoal);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-pathway {
            background-color: var(--midnight-navy) !important;
            border-bottom: 3px solid var(--electric-blue);
            box-shadow: 0 2px 10px rgba(30, 42, 56, 0.1);
        }

        .navbar-pathway .navbar-brand {
            color: white !important;
            font-weight: 700;
            font-size: 1.5rem;
        }

        .navbar-pathway .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            transition: all 0.3s ease;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            border-radius: 6px;
        }

        .navbar-pathway .nav-link:hover {
            color: white !important;
            background-color: var(--sky-blue);
            transform: translateY(-1px);
        }

        .navbar-pathway .nav-link.active {
            background-color: var(--electric-blue);
            color: white !important;
        }

        .btn-primary {
            background-color: var(--electric-blue);
            border-color: var(--electric-blue);
        }

        .btn-primary:hover {
            background-color: var(--sky-blue);
            border-color: var(--sky-blue);
        }

        .btn-success {
            background-color: var(--soft-green);
            border-color: var(--soft-green);
        }

        .btn-warning {
            background-color: var(--warm-yellow);
            border-color: var(--warm-yellow);
            color: var(--dark-charcoal);
        }

        .card {
            background-color: white;
            border: 1px solid rgba(108, 117, 125, 0.2);
            box-shadow: 0 2px 8px rgba(30, 42, 56, 0.08);
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 4px 16px rgba(30, 42, 56, 0.12);
            transform: translateY(-2px);
        }

        .text-muted {
            color: var(--muted-gray) !important;
        }

        .border-primary {
            border-color: var(--electric-blue) !important;
        }

        .bg-light {
            background-color: var(--cool-white) !important;
        }

        /* Dashboard specific styles */
        .dashboard-header {
            background: linear-gradient(135deg, var(--midnight-navy) 0%, var(--electric-blue) 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }

        .widget-card {
            border-radius: 12px;
            border: none;
            background: white;
            box-shadow: 0 2px 12px rgba(30, 42, 56, 0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

        .widget-card:hover {
            box-shadow: 0 6px 20px rgba(30, 42, 56, 0.15);
            transform: translateY(-3px);
        }

        .widget-header {
            background-color: var(--cool-white);
            border-bottom: 2px solid var(--electric-blue);
            padding: 1rem 1.5rem;
            border-radius: 12px 12px 0 0;
        }

        .widget-title {
            color: var(--midnight-navy);
            font-weight: 600;
            margin: 0;
            font-size: 1.1rem;
        }

        .widget-body {
            padding: 1.5rem;
        }

        /* Theme toggle preparation for future */
        [data-theme="dark"] {
            --cool-white: #1a1a1a;
            --dark-charcoal: #ffffff;
            --muted-gray: #cccccc;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .dashboard-header {
                padding: 1.5rem 0;
                margin-bottom: 1.5rem;
            }

            .widget-card {
                margin-bottom: 1rem;
            }
        }

        /* Flash messages styling */
        .alert {
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(30, 42, 56, 0.08);
        }

        .alert-success {
            background-color: var(--soft-green);
            color: white;
        }

        .alert-danger {
            background-color: #dc3545;
            color: white;
        }

        .alert-warning {
            background-color: var(--warm-yellow);
            color: var(--dark-charcoal);
        }

        /* Dropdown menu styling */
        .dropdown-menu {
            border: none;
            box-shadow: 0 4px 12px rgba(30, 42, 56, 0.15);
            border-radius: 8px;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover {
            background-color: var(--cool-white);
            color: var(--electric-blue);
        }

        /* Loading spinner */
        .loading-spinner {
            width: 3rem;
            height: 3rem;
            border: 3px solid var(--cool-white);
            border-top: 3px solid var(--electric-blue);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-pathway">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_dashboard') }}">
                <i class="bi bi-mortarboard-fill me-2"></i>Pathway+
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_dashboard' ? 'active' : '' }}"
                               href="{{ path('app_dashboard') }}">
                                <i class="bi bi-speedometer2 me-1"></i>Dashboard
                            </a>
                        </li>
                        {% if is_granted('ROLE_STUDENT') %}
                            <li class="nav-item">
                                <a class="nav-link" href="#" id="browseJobsLink">
                                    <i class="bi bi-briefcase me-1"></i>Browse Jobs
                                </a>
                            </li>
                        {% endif %}
                        {% if is_granted('ROLE_STUDENT') %}
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get('_route') == 'app_skill_passport' ? 'active' : '' }}"
                                   href="{{ path('app_skill_passport') }}">
                                    <i class="bi bi-award me-1"></i>Skill Passport
                                </a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') == 'app_profile' ? 'active' : '' }}"
                               href="{{ path('app_profile') }}">
                                <i class="bi bi-person me-1"></i>Profile
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                {% if app.user.avatarUrl %}
                                    <img src="{{ app.user.avatarUrl }}" alt="{{ app.user.fullName }}"
                                         class="rounded-circle me-1" style="width: 24px; height: 24px; object-fit: cover;">
                                {% else %}
                                    <i class="bi bi-person-circle me-1"></i>
                                {% endif %}
                                {{ app.user.fullName }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('app_dashboard') }}">
                                        <i class="bi bi-speedometer2 me-2"></i>Dashboard
                                    </a></li>
                                <li><a class="dropdown-item" href="{{ path('app_profile') }}">
                                        <i class="bi bi-person me-2"></i>Profile
                                    </a></li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}">
                                            <i class="bi bi-gear me-2"></i>Admin Panel
                                        </a></li>
                                {% endif %}
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                                    </a></li>
                            </ul>
                        </li>
                    </ul>
                {% else %}
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus me-1"></i>Register
                            </a>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>

    <main class="container py-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">Â© {{ "now"|date("Y") }} Pathway+. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        // Theme toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('themeToggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    const html = document.documentElement;
                    const currentTheme = html.getAttribute('data-theme');
                    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                    html.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                    

                    const themeIcon = document.getElementById('themeIcon');
                    if (themeIcon) {
                        themeIcon.className = newTheme === 'light' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
                    }
                });
            }

            // Load saved theme preference
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.documentElement.setAttribute('data-theme', savedTheme);
                const themeIcon = document.getElementById('themeIcon');
                if (themeIcon) {
                    themeIcon.className = savedTheme === 'light' ? 'bi bi-sun-fill' : 'bi bi-moon-fill';
                }
            }
        });

        // Layout customization functionality
        function initializeLayoutCustomization() {
            const customizeBtn = document.getElementById('customizeLayout');
            if (customizeBtn) {
                customizeBtn.addEventListener('click', function() {
                    const widgetGrid = document.getElementById('widgetGrid');
                    if (widgetGrid) {
                        const widgets = widgetGrid.querySelectorAll('[data-widget]');
                        widgets.forEach(widget => {
                            widget.classList.add('draggable');
                            widget.setAttribute('draggable', 'true');
                        });

                        // Show customization UI
                        Swal.fire({
                            title: 'Customize Layout',
                            html: `
                                <div class="text-start">
                                    <p>Drag and drop widgets to rearrange them.</p>
                                    <p>Click the <i class="bi bi-x-circle"></i> to hide a widget.</p>
                                </div>
                            `,
                            icon: 'info',
                            confirmButtonText: 'Done'
                        });
                    }
                });
            }
        }

        // Initialize layout customization when DOM is loaded
        document.addEventListener('DOMContentLoaded', initializeLayoutCustomization);
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
